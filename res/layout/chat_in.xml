<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="match_parent"
	android:layout_height="match_parent">
	<LinearLayout android:layout_width="wrap_content"
		android:layout_height="wrap_content">
		<TextView android:id="@+id/userId" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:textColor="#FF666666"
			 android:layout_marginLeft="5dip" />
		<TextView android:id="@+id/nowdate" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:textColor="#ff666666"
			 android:layout_marginLeft="5dip" />
	</LinearLayout>
	<LinearLayout android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:background="@drawable/incoming"
		android:layout_marginLeft="5dip">
		<TextView android:id="@+id/msg_content" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:textColor="#ff666666"
			 />
			 
	</LinearLayout>
</LinearLayout>
